
{
  "manifest_version": 3,
  "name": "NexusCore Monitor",
  "version": "1.0",
  "description": "Monitora a atividade de navegação para o dashboard NexusCore.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "idle" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}