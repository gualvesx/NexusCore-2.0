{
  "manifest_version": 3,
  "name": "NexusCore Security Monitor",
  "version": "1.0.0",
  "description": "Monitoramento de atividades e seguran√ßa para equipes NexusCore.",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://firestore.googleapis.com/*"
  ],
"background": {
    "service_worker": "background.js", 
    "type": "module"
  },
  "action": {
    "default_popup": "public/options.html",
    "default_icon": {
      "16": "public/icons/icon128.png",
      "48": "public/icons/icon128.png",
      "128": "public/icons/icon128.png"
    }
  },
  "options_page": "public/options.html",
  "icons": {
    "16": "public/icons/icon128.png",
    "48": "public/icons/icon128.png",
    "128": "public/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*", "dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}